{
   "compilerOptions": {
     "declaration": true,
     "target": "ES6",
     "module": "commonjs",
     "lib": ["esnext"],
     "allowJs": true,
     "checkJs": false,
     "outDir": "build",
     "rootDir": "src",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "experimentalDecorators": true,
     "downlevelIteration": true,
     "sourceMap": true,
     "emitDecoratorMetadata": true,
   },
   "include": ["src/**/*.ts", "src/__tests__/**/*.ts"],
   "exclude": ["node_modules", "build/**/*.js"]
 }
 